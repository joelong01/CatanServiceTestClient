<Page
    x:Class="CatanSvcTestClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CatanSvcTestClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="837*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
        <Button Content="Start" Margin="10" VerticalAlignment="Top" Height="70" Width="185" Click="Button_Click"/>
            <Button Content="Bad Trade Request"  Margin="10" VerticalAlignment="Top" Height="70" Width="185" Click="OnBadTradeRequest"/>
            <Button Content="Gold Trade" Margin="10"  VerticalAlignment="Top" Height="70" Width="185" Click="OnTradeInGold"/>
            <Button Content="Do Trade" Margin="10"  VerticalAlignment="Top" Height="70" Width="185" Click="OnDoTrade"/>
            <Button Content="Take Card" Margin="10"  VerticalAlignment="Top" Height="70" Width="185" Click="OnTakeCard"/>
            <Button Content="3:1" Margin="10"  VerticalAlignment="Top" Height="70" Width="185" Click="OnTradeThreeForOne"/>
        </StackPanel>

        <TextBox Name="_txt" Text="" AcceptsReturn="True" TextWrapping="Wrap"  Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Visible"/>

    </Grid>
</Page>
