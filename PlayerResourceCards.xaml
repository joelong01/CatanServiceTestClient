<UserControl
    x:Class="CatanSvcTestClient.PlayerResourceCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CatanSvcTestClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" >
            <TextBlock Text="{x:Bind Caption, Mode=TwoWay, FallbackValue=Player Name}" FontSize="20" Margin="10,0,10,0"/>
            <ComboBox Name="_cmbPlayers" HorizontalAlignment="Right" VerticalAlignment="Stretch" ItemsSource="{x:Bind _lstPlayerList, Mode=OneWay}" SelectionChanged="OnUserChanged"  Width="293" FontSize="20" />
        </StackPanel>
        

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <local:ResourceCardCtrl x:Name="_goldMine" ResourceType="GoldMine" Orientation="FaceUp" Count="0"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1"/>
            <local:ResourceCardCtrl x:Name="_wood" ResourceType="Wood" Orientation="FaceUp" Count="0" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1"/>
            <local:ResourceCardCtrl x:Name="_brick" ResourceType="Brick" Orientation="FaceUp" Count="0"  Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1"/>
            <local:ResourceCardCtrl x:Name="_sheep" ResourceType="Sheep" Orientation="FaceUp" Count="0"  Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1"/>
            <local:ResourceCardCtrl x:Name="_wheat" ResourceType="Wheat" Orientation="FaceUp" Count="0" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="1"/>
            <local:ResourceCardCtrl x:Name="_ore" ResourceType="Ore" Orientation="FaceUp" Count="0"  Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="1"/>
        </StackPanel>



    </Grid>
</UserControl>
